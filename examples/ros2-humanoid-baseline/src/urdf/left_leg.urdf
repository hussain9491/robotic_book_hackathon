<?xml version="1.0"?>
<!-- Left Leg Components for Humanoid Robot -->
<robot name="humanoid_left_leg" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Left Leg -->
  <link name="left_upper_leg">
    <visual>
      <geometry>
        <cylinder length="0.4" radius="0.06"/>
      </geometry>
      <material name="red"/>
      <origin rpy="0 0 0" xyz="0 0 -0.2"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.4" radius="0.06"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 -0.2"/>
    </collision>
    <inertial>
      <mass value="2.0"/>
      <inertia ixx="0.02" ixy="0.0" ixz="0.0" iyy="0.02" iyz="0.0" izz="0.002"/>
    </inertial>
  </link>

  <joint name="left_hip_pitch" type="revolute">
    <parent link="torso"/>
    <child link="left_upper_leg"/>
    <origin xyz="0.1 0.0 -0.25"/>
    <axis xyz="1 0 0"/>
    <limit lower="-1.0" upper="1.0" effort="200" velocity="2.0"/>
  </joint>

  <link name="left_lower_leg">
    <visual>
      <geometry>
        <cylinder length="0.4" radius="0.05"/>
      </geometry>
      <material name="red"/>
      <origin rpy="0 0 0" xyz="0 0 -0.2"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.4" radius="0.05"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 -0.2"/>
    </collision>
    <inertial>
      <mass value="1.5"/>
      <inertia ixx="0.02" ixy="0.0" ixz="0.0" iyy="0.02" iyz="0.0" izz="0.002"/>
    </inertial>
  </link>

  <joint name="left_knee_joint" type="revolute">
    <parent link="left_upper_leg"/>
    <child link="left_lower_leg"/>
    <origin xyz="0.0 0.0 -0.4"/>
    <axis xyz="1 0 0"/>
    <limit lower="0.0" upper="2.0" effort="200" velocity="2.0"/>
  </joint>

</robot>